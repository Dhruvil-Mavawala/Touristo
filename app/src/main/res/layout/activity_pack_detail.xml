<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PackDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp">

                <ImageView
                    android:id="@+id/imagepack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beachimg" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lakes of Liquare"
                android:layout_marginStart="18dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="left"
                android:fontFamily="@font/allerta_stencil"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daman and Diu"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="18dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:fontFamily="@font/allerta_stencil"/>

                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="70dp"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    android:gravity="right"
                    android:fontFamily="@font/allerta_stencil"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F5F7F8"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvbed"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="2 Bed"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F5F7F8"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvday"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="2 Days 4 Night"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F5F7F8"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvguide"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Guide"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F5F7F8"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvwifi"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Wifi"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Desc"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    android:id="@+id/btnBook"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#3180FF"
                    android:fontFamily="@font/anek_bangla_semibold"
                    android:text="Book Now"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#A2A2A2"
                android:textColorHighlight="@color/black"
                android:text="&#xf0c6; Terms and Condition"
                android:fontFamily="@font/fontawesome"
                />



        </LinearLayout>

    </ScrollView>

</LinearLayout>
