<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PackDetail">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DF0D92F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/amethysta"
            android:textStyle="bold"
            android:text="Package Details"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="15dp" />

    </Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="645dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imagepack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beachimg" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lakes of Liquare"
                android:layout_marginStart="18dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="left"
                android:fontFamily="@font/allerta_stencil"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daman and Diu"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="18dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:fontFamily="@font/allerta_stencil"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/fontawesome"
                    android:text="&#xf156;"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:textColor="#0027FF"
                    android:textColorHighlight="@color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/allerta_stencil"
                    android:text="$200"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textColor="#0027FF"
                    android:textColorHighlight="@color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvbed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Bed"
                        android:textColor="@color/black"
                        android:drawableLeft="@mipmap/bed"
                        android:drawablePadding="5dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Days 4 Night"
                        android:drawableLeft="@mipmap/days"
                        android:drawablePadding="5dp"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvguide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guide"
                        android:layout_margin="10dp"
                        android:drawableLeft="@mipmap/guide"
                        android:drawablePadding="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    app:contentPadding="5dp">

                    <TextView
                        android:id="@+id/tvwifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:drawableLeft="@mipmap/wifi"
                        android:drawablePadding="5dp"
                        android:textSize="20sp"
                        android:gravity="center"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <EditText
                android:drawableStart="@mipmap/schedule"
                android:drawablePadding="10dp"
                android:id="@+id/date_picker_actions"
                android:layout_width="match_parent"
                android:inputType="date"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="20dp"
                android:hint="Select the date"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="#70000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="#70000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textStyle="bold"
                android:drawableRight="@mipmap/desc"
                android:drawablePadding="8dp"
                android:textSize="25dp"
                android:layout_weight="6.5"
                android:fontFamily="@font/allerta_stencil"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="#70000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="#70000000"/>



            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">




            </LinearLayout>





        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnBook"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/lite_blue"
        android:fontFamily="@font/anek_bangla_semibold"
        android:text="Book Now"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#0000EE"
        android:textColorHighlight="@color/black"
        android:text="&#xf0c6; Terms and Condition"
        android:fontFamily="@font/fontawesome"
        />
    <View
        android:layout_width="248dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:background="#0000EE"/>

</LinearLayout>
